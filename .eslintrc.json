{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "ecmaFeatures": {
    "classes": true
  },
  "rules": {
    "no-console": "off",
    "no-var": "error",
    "no-underscore-dangle": ["error", { "allow": ["_id"] } ],
    "no-param-reassign": ["error", { "props": false }],
    "semi": "error",
    "strict": "error",
    "import/extensions": false,
    "import/no-unresolved": false,
    "valid-jsdoc": ["error", {
      "requireReturn": false,
      "prefer": {
        "arg": "param",
        "argument": "param",
        "returns": "return"
      },
      "preferType": {
        "Boolean": "boolean",
        "Number": "number",
        "String": "string",
        "object": "Object"
      }
    }]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "_": true,
    "faker": true,

    "require": true,
    "global": true,

    "customElements": true,
    "HTMLImports": true,
    "Polymer": true,
    "ShadyDOM": true,
    "ShadyCSS": true,
    "JSCompiler_renameProperty": true
  }
}
